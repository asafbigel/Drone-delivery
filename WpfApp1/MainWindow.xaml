<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid HorizontalAlignment="Left" Width="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" MinHeight="152"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnKlum" Content="עברית" HorizontalAlignment="Center" Height="54" Margin="0,98,0,0" VerticalAlignment="Top" Width="108" Click="btnKlum_Click" Grid.Row="2"/>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" Height="Auto" Margin="0,141,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="380"/>
        <ListBox Grid.Column="1" HorizontalAlignment="Left" Height="76" Margin="46,34,0,0" Grid.Row="1" VerticalAlignment="Top" Width="317"/>

    </Grid>
</Window>
