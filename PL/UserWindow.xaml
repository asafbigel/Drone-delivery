<Window x:Class="PL.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="UserWindow" Height="450" Width="1035">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="309*"/>
            <ColumnDefinition Width="91*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Height="auto" >
            <Button x:Name="Drones" Content="Drones" Margin="15,15,15,15" FontSize="24" Click="Drones_Click"  />
            <Button x:Name="BaseStations" Content="Base stations" Margin="15,15,15,15" FontSize="24" Click="BaseStations_Click" />
            <Button x:Name="Customers" Content="Customers" Margin="15,15,15,15" FontSize="24" Click="Customers_Click" />
            <Button x:Name="Parcels" Content="Parcels" Margin="15,15,15,15" FontSize="24" Click="Parcels_Click" />
            <Button x:Name="Exit" Content="Exit" Margin="15,15,15,15" FontSize="24" Click="Exit_Click" />
        </StackPanel>
        <Frame x:Name="View" Grid.Column="0" />
    </Grid>
</Window>
