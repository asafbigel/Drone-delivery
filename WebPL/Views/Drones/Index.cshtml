
@model IEnumerable<WebPL.Models.DroneToListDto>
@{
    ViewData["Title"] = "Drones";
}
<div class="d-flex align-items-center justify-content-between mb-3">
    <h2>Drones</h2>
    <a class="btn btn-primary" href="/Drones/Create">Create Drone</a>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-auto">
        <label class="form-label">Status</label>
        <select name="status" class="form-select">
            <option value="">Any</option>
            <option value="0" selected="@(ViewBag.Status != null && (int)ViewBag.Status == 0 ? "selected" : null)">Available</option>
            <option value="1" selected="@(ViewBag.Status != null && (int)ViewBag.Status == 1 ? "selected" : null)">Maintenance</option>
            <option value="2" selected="@(ViewBag.Status != null && (int)ViewBag.Status == 2 ? "selected" : null)">Delivery</option>
        </select>
    </div>
    <div class="col-auto">
        <label class="form-label">Weight</label>
        <select name="weight" class="form-select">
            <option value="">Any</option>
            <option value="0" selected="@(ViewBag.Weight != null && (int)ViewBag.Weight == 0 ? "selected" : null)">Light</option>
            <option value="1" selected="@(ViewBag.Weight != null && (int)ViewBag.Weight == 1 ? "selected" : null)">Medium</option>
            <option value="2" selected="@(ViewBag.Weight != null && (int)ViewBag.Weight == 2 ? "selected" : null)">Heavy</option>
        </select>
    </div>
    <div class="col-auto align-self-end">
        <button class="btn btn-outline-secondary">Filter</button>
        <a class="btn btn-link" href="/Drones">Reset</a>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Model</th>
            <th>Status</th>
            <th>Weight</th>
            <th>Battery</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var d in Model) {
    <tr>
        <td>@d.Id</td>
        <td>@d.Model</td>
        <td>@d.Status</td>
        <td>@d.Weight</td>
        <td>@d.Battery%</td>
        <td>
            <a class="btn btn-sm btn-outline-primary" href="/Drones/Details/@d.Id">Details</a>
        </td>
    </tr>
}
    </tbody>
</table>
